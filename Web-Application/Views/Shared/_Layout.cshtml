@using Web_Application.Infraestrutura
<!DOCTYPE html>
<html>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"
          charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/content/bootstrap.css")" rel="stylesheet" />
    @RenderSection("styles", false)
    <style>
        header {
            background-color: white;
        }

        .container-cabecalho {
            display: flex;
            justify-content: space-around;
        }

        .lista-item-cabecalho {
            border-bottom: 1px solid white;
            color: white;
            display: inline-block;
            margin: 10px;
        }

        .cabecalho {
            width: 100%;
            display: flex;
            justify-content: space-evenly;
            margin: 0px 20%;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="page-header" style="color:black; margin-bottom: 0.5em">
                <h1>
                    PROJETO PSI
                    <small class="text-danger" style="color:darkgray; margin-bottom: 0.5em">
                        Por Clara Ricarte
                    </small>
                </h1>
            </div>
        </div>
        <div style="text-align:right;">
            @{
                if (Html.GetAuthenticatedUser().ToString() != "")
                {
                    @Html.GetAuthenticatedUser();
                    @Html.ActionLink(" - Sair", "Logout", "Account")
                }
                else
                {
                    @Html.ActionLink("Acessar", "Login", "Account", new { area = "Seguranca" }, null);

                }
            }
        </div>
        <div class="row">
            <header>
                <nav class="container-cabecalho">
                    <ul class="" cabecalho">
                        <li class="lista-item-cabecalho role="presentation">@Html.ActionLink("Home", "Index", "Home", new { Area = "" }, null)</li>
                        <li class="lista-item-cabecalho role="presentation">@Html.ActionLink("Categorias", "Index", "Categorias", new { Area = "Tabelas" }, null)</li>
                        <li class="lista-item-cabecalho role="presentation">@Html.ActionLink("Fabricantes", "Index", "Fabricantes", new { Area = "Cadastros" }, null)</li>
                        <li class="lista-item-cabecalho role="presentation">@Html.ActionLink("Produtos", "Index", "Produtos", new { Area = "Cadastros" }, null)</li>
                        <li class="lista-item-cabecalho role="presentation">@Html.ActionLink("Usuários", "Index", "Admin", new { area = "Seguranca" }, null)</li>
                        <li class="lista-item-cabecalho role="presentation">@Html.ActionLink("Papéis", "Index", "PapelAdmin", new { area = "Seguranca" }, null)</li>
                    </ul>
                </nav>
            </header>
            <div>
                <br />
                @RenderBody()
            </div>
        </div> <br />
        <div class="row">
            <div class="col-xs-12 col-md-12r">
                <small>Layout com Bootstrap</small>
            </div>
        </div>
    </div>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"></script>
    <script src="@Url.Content("~/scripts/jquery-1.10.2.js")"></script>
    <script src="@Url.Content("~/scripts/bootstrap.js")"></script>
    @RenderSection("ScriptPage", false);
</body>
</html>
